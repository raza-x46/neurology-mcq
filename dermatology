  <div id="question"></div>
  <div id="options"></div>
</div>

<button id="prev" onclick="prevQuestion()">Previous</button>
<button id="next" onclick="nextQuestion()">Next Question</button>

<div id="review">
  <h3>Review â€“ Wrong Answers</h3>
  <div id="reviewList"></div>
</div>

<script>
const questions = [
  // === PASTE YOUR DERMATOLOGY MCQs HERE ===
  // Example format:
  // {q:"Question text", options:["A","B","C","D"], correctText:"B"}
];

let current = 0;
let score = 0;
let answered = false;
let wrongAnswers = [];

function shuffle(array){
  return array.sort(()=>Math.random()-0.5);
}

function loadQuestion(){
  answered = false;
  const q = questions[current];
  document.getElementById("question").innerText =
    (current+1)+". "+q.q;

  document.getElementById("progress").innerText =
    "Question "+(current+1)+" of "+questions.length;

  const optionsDiv = document.getElementById("options");
  optionsDiv.innerHTML = "";

  shuffle([...q.options]).forEach(opt=>{
    const btn = document.createElement("button");
    btn.innerText = opt;
    btn.onclick = ()=>checkAnswer(btn,opt,q.correctText);
    optionsDiv.appendChild(btn);
  });
}

function checkAnswer(btn,selected,correct){
  if(answered) return;
  answered = true;

  if(selected === correct){
    btn.classList.add("correct");
    score++;
    document.getElementById("scoreBox").innerText = "Score: "+score;
  } else {
    btn.classList.add("wrong");
    wrongAnswers.push({
      q: questions[current].q,
      your: selected,
      correct: correct
    });
    [...document.querySelectorAll("#options button")].forEach(b=>{
      if(b.innerText === correct) b.classList.add("correct");
    });
  }
}

function nextQuestion(){
  if(current < questions.length-1){
    current++;
    loadQuestion();
  } else {
    showReview();
  }
}

function prevQuestion(){
  if(current > 0){
    current--;
    loadQuestion();
  }
}

function jumpTo(){
  const n = parseInt(document.getElementById("jumpInput").value);
  if(n>=1 && n<=questions.length){
    current = n-1;
    loadQuestion();
  }
}

function showReview(){
  document.getElementById("review").style.display="block";
  const list = document.getElementById("reviewList");
  list.innerHTML="";
  wrongAnswers.forEach((w,i)=>{
    const d = document.createElement("div");
    d.className="review-item";
    d.innerHTML = `<b>${i+1}. ${w.q}</b><br>
    Your answer: ${w.your}<br>
    Correct answer: ${w.correct}`;
    list.appendChild(d);
  });
}

if(questions.length>0) loadQuestion();
</script>

